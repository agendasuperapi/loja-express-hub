<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Não reescreve se for arquivo ou pasta real
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Se for bot de rede social em URLs de produto, redireciona para share.php
  RewriteCond %{HTTP_USER_AGENT} facebookexternalhit|WhatsApp|Twitterbot|Slackbot|LinkedInBot [NC]
  RewriteRule ^p/([a-zA-Z0-9_-]+)$ share.php?type=product&short_id=$1 [QSA,L]

  # Se for bot de rede social em URLs de loja, redireciona para share.php
  RewriteCond %{HTTP_USER_AGENT} facebookexternalhit|WhatsApp|Twitterbot|Slackbot|LinkedInBot [NC]
  RewriteRule ^([a-zA-Z0-9_-]+)$ share.php?type=store&username=$1 [QSA,L]

  # Todo o resto vai para a aplicação React (inclui usuários reais)
  RewriteRule ^.*$ /index.html [L]
</IfModule>
